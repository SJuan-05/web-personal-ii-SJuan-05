{% extends 'base2.html.twig' %}

{% block body %}
<div class="container" style="padding-top:100px; padding-bottom:50px;">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h1>Inicio Sesi√≥n</h1>
            <div class="card shadow-sm rounded">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path('app_login') }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        {# CAMBIAMOS _username POR email #}
                        <div class="mb-3">
                            <label for="username" class="form-label">Email:</label>
                            <input type="text" id="username" name="email" value="{{ last_username }}" class="form-control" required autofocus>
                        </div>

                        {# CAMBIAMOS _password POR password #}
                        <div class="mb-3">
                            <label for="password" class="form-label">Password:</label>
                            <input type="password" id="password" name="password" class="form-control" required>
                        </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a href="{{ path('app_register') }}">Don't have an account? Register</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
